{
  "include_patterns": [
    "*.py",
    "*.json",
    "*.yml",
    "*.yaml",
    "*.ini",
    "*.cfg",
    "*.pyi",
    "*.sh",
    "*.html",
    "*.js",
    "*.css",
    "requirements*.txt",
    "Dockerfile",
    ".dockerignore",
    "pyproject.toml",
    "CLAUDE.md"
  ],
  "exclude_patterns": [
    "test_*.py",
    "*_test.py",
    "tests/",
    "Transfer.py",
    "transfer_cli.py",
    "bundle_app.py",
    "decode_app.py",
    "setup_transfer_hook.py",
    "*.log",
    "*.tmp",
    "*.bak",
    "*.backup",
    "*.backup.*",
    "*.old",
    "encoded_app_*.txt",
    "encoded_releases/*",
    "slategallery_latest.txt",
    "*AGENT*.md",
    "*WEEK*.md",
    "*REVIEW*.md",
    "*COMPLETE*.md",
    "*GUIDE*.md",
    "*PROGRESS*.md",
    "*TESTING*.md",
    "*RESEARCH*.md",
    "run_tests*.py",
    "run_tests*.sh",
    "run_debug.sh",
    "coverage*.json",
    "transfer_config.json",
    "uv.lock",
    "screen.jpg",
    "buttons.jpg"
  ],
  "exclude_dirs": [
    "tests",
    "test",
    "__pycache__",
    ".git",
    ".pytest_cache",
    "venv",
    "env",
    ".venv",
    ".env",
    "archive",
    "archived",
    "copy",
    ".slate_gallery",
    "htmlcov",
    "coverage_html",
    ".coverage",
    ".hypothesis",
    ".vscode",
    ".idea",
    "encoded_releases",
    "node_modules",
    "dist",
    "build",
    ".eggs",
    "docs",
    "dev-tools",
    "examples",
    ".post-commit-output",
    ".github",
    ".claude",
    ".serena",
    ".ruff_cache",
    "encoding-hook-system",
    "Slate",
    "resources"
  ],
  "max_file_size_mb": 10,
  "chunk_size_kb": 5120,
  "output_dir": "encoded_releases",
  "remote_branch": "encoded-releases",
  "auto_push": true,
  "clean_old_releases": true,
  "max_releases_to_keep": 10,
  "commit_message_template": "Auto-encoded release for commit {commit_hash}",
  "encoding_options": {
    "compression": "gzip",
    "include_metadata": true,
    "single_file_output": true
  }
}
